<div id="header">
  <h1>Articles</h1>
</div>
<div id="section_for_show">
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
 
<div id="article-comments">
  <h2>Comments</h2>
  <%= render @article.comments %>
</div>
 
<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build] , remote: true)  do |f| %>
  <% unless flash[:notice].nil? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(flash[:notice].count, 'error')%> prohibited this comment from being saved:
      </h2>
      <% flash[:notice].each do |message| %>
        <ul>
          <li><%= message%></li>
        </ul>
      <% end %>
    </div>
  <% end%>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
 
<h3 style=text-align:center><%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %></h3>
